/**
 * @file Firestore Security Rules
 * @version 2
 *
 * @Core Philosophy
 * This ruleset enforces a strict user-ownership model for user profiles and achievements.
 * Other collections (courses, lessons, exams, etc.) are publicly readable, but write access is denied in this prototyping phase, pending a decision on authorization strategy.
 *
 * @Data Structure
 * - /users/{userId}: User profiles, accessible only by the user themselves.
 * - /users/{userId}/achievements/{userAchievementId}: User achievements, accessible only by the user.
 * - /courses/{courseId}: Course information, publicly readable.
 * - /lessons/{lessonId}: Lesson information, publicly readable.
 * - /questions/{questionId}: Question data, publicly readable.
 * - /exams/{examId}: Exam definitions, publicly readable.
 * - /attempts/{attemptId}: Exam attempts, publicly readable.
 * - /metrics/daily/{date}: Daily metrics, publicly readable.
 * - /courseCompetencies/{courseCompetencyId}: Course competencies, publicly readable.
 * - /masterCourses/{masterCourseId}: Master courses, publicly readable.
 * - /masterCertificates/{masterCertificateId}: Master certificates, publicly readable.
 * - /roadmaps/{roadmapId}: Roadmaps, publicly readable.
 * - /schedules/{scheduleId}: Schedules, publicly readable.
 * - /quizzes/{quizId}: Quizzes, publicly readable.
 *
 * @Key Security Decisions
 * - User listing is disallowed to protect user privacy.
 * - Other collections are publicly readable for prototyping purposes.
 * - Write operations are generally disabled except for user-owned data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     * @return {bool} True if the request is authenticated, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the request is made by the owner of the resource.
     * @param {string} userId - The user ID to compare against the request's authentication UID.
     * @return {bool} True if the user ID matches the request's authentication UID, false otherwise.
     * @example isOwner("someUserId") -> true if request.auth.uid == "someUserId"
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the request is made by the owner of the resource and the resource exists.
     * @param {string} userId - The user ID to compare against the request's authentication UID.
     * @return {bool} True if the user ID matches the request's authentication UID and the resource exists, false otherwise.
     * @example isExistingOwner("someUserId") -> true if request.auth.uid == "someUserId" and resource exists
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Rules for user profiles.
     * @path /users/{userId}
     * @allow (create) User 'OOjU7LTqSRWfjF8sMOOq4geYjYy2' can create their profile at /users/OOjU7LTqSRWfjF8sMOOq4geYjYy2.
     * @allow (get) User 'OOjU7LTqSRWfjF8sMOOq4geYjYy2' can read their profile at /users/OOjU7LTqSRWfjF8sMOOq4geYjYy2.
     * @allow (update) User 'OOjU7LTqSRWfjF8sMOOq4geYjYy2' can update their profile at /users/OOjU7LTqSRWfjF8sMOOq4geYjYy2.
     * @allow (delete) User 'OOjU7LTqSRWfjF8sMOOq4geYjYy2' can delete their profile at /users/OOjU7LTqSRWfjF8sMOOq4geYjYy2.
     * @deny (create) User 'attackerId' cannot create a profile at /users/OOjU7LTqSRWfjF8sMOOq4geYjYy2.
     * @deny (get) User 'attackerId' cannot read the profile at /users/OOjU7LTqSRWfjF8sMOOq4geYjYy2.
     * @deny (update) User 'attackerId' cannot update the profile at /users/OOjU7LTqSRWfjF8sMOOq4geYjYy2.
     * @deny (delete) User 'attackerId' cannot delete the profile at /users/OOjU7LTqSRWfjF8sMOOq4geYjYy2.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for courses.
     * @path /courses/{courseId}
     * @allow (get, list) Any user can read course information.
     * @deny (create, update, delete) No one can create, update, or delete course information in this prototype.
     * @principle Public read access, owner-only writes (not yet implemented).
     */
    match /courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add instructor/admin role check
    }

    /**
     * @description Rules for lessons.
     * @path /lessons/{lessonId}
     * @allow (get, list) Any user can read lesson information.
     * @deny (create, update, delete) No one can create, update, or delete lesson information in this prototype.
     * @principle Public read access, owner-only writes (not yet implemented).
     */
    match /lessons/{lessonId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add instructor/admin role check
    }

    /**
     * @description Rules for questions.
     * @path /questions/{questionId}
     * @allow (get, list) Any user can read question data.
     * @deny (create, update, delete) No one can create, update, or delete question data in this prototype.
     * @principle Public read access, owner-only writes (not yet implemented).
     */
    match /questions/{questionId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add instructor/admin role check
    }

    /**
     * @description Rules for exams.
     * @path /exams/{examId}
     * @allow (get, list) Any user can read exam definitions.
     * @deny (create, update, delete) No one can create, update, or delete exam definitions in this prototype.
     * @principle Public read access, owner-only writes (not yet implemented).
     */
    match /exams/{examId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add instructor/admin role check
    }

    /**
     * @description Rules for attempts.
     * @path /attempts/{attemptId}
     * @allow (get, list) Any user can read exam attempts.
     * @deny (create, update, delete) No one can create, update, or delete exam attempts in this prototype.
     * @principle Public read access, owner-only writes (not yet implemented).
     */
    match /attempts/{attemptId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add instructor/admin role check
    }

    /**
     * @description Rules for daily metrics.
     * @path /metrics/daily/{date}
     * @allow (get, list) Any user can read daily metrics.
     * @deny (create, update, delete) No one can create, update, or delete daily metrics in this prototype.
     * @principle Public read access, owner-only writes (not yet implemented).
     */
    match /metrics/daily/{date} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin role check
    }

    /**
     * @description Rules for course competencies.
     * @path /courseCompetencies/{courseCompetencyId}
     * @allow (get, list) Any user can read course competencies.
     * @deny (create, update, delete) No one can create, update, or delete course competencies in this prototype.
     * @principle Public read access, owner-only writes (not yet implemented).
     */
    match /courseCompetencies/{courseCompetencyId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add instructor/admin role check
    }

    /**
     * @description Rules for user achievements.
     * @path /users/{userId}/achievements/{userAchievementId}
     * @allow (create, get, update, delete) Only the user can manage their own achievements.
     * @deny (create, get, update, delete) Other users cannot manage achievements.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/achievements/{userAchievementId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for master courses.
     * @path /masterCourses/{masterCourseId}
     * @allow (get, list) Any user can read master course definitions.
     * @deny (create, update, delete) No one can create, update, or delete master course definitions in this prototype.
     * @principle Public read access, owner-only writes (not yet implemented).
     */
    match /masterCourses/{masterCourseId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin role check
    }

     /**
      * @description Rules for master certificates.
      * @path /masterCertificates/{masterCertificateId}
      * @allow (get, list) Any user can read master certificate definitions.
      * @deny (create, update, delete) No one can create, update, or delete master certificate definitions in this prototype.
      * @principle Public read access, owner-only writes (not yet implemented).
      */
    match /masterCertificates/{masterCertificateId} {
      allow get, list: if true;
