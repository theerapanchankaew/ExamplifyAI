    /**
     * @description Enforces strict user-ownership for user achievements.
     * @path /users/{userId}/achievements/{userAchievementId}
     * @allow (create) User with matching UID can create their own achievement.
     * @allow (get, update, delete) User with matching UID can read, update, and delete their own achievement.
     * @deny (create) User cannot create an achievement with a mismatched UID.
     * @deny (list) Only the owner can list their own achievements.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/achievements/{userAchievementId} {
        function isSignedIn() {
            return request.auth != null;
        }

        function isOwner(userId) {
            return request.auth.uid == userId;
        }

        function isExistingOwner(userId) {
            return isOwner(userId) && resource != null;
        }

        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isSignedIn() && request.auth.uid == userId && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
    }

