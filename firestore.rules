    }

    /**
     * @description Defines access rules for roadmaps.
     * @path /roadmaps/{roadmapId}
     * @allow (get, list) Public read access is allowed for roadmaps.
     * @deny (create, update, delete) Write access is not allowed in this prototype.
     */
    match /roadmaps/{roadmapId} {
