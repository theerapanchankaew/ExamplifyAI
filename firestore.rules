/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for user profiles and achievements.
 * All other data (courses, lessons, questions, exams, attempts, metrics, course competencies,
 * master courses, master certificates, roadmaps, schedules, and quizzes) is publicly readable.
 *
 * Data Structure:
 * - User profiles are stored under /users/{userId}, where userId must match the authenticated user's UID.
 * - User achievements are stored under /users/{userId}/achievements/{achievementId} and are only accessible by the owning user.
 * - All other collections are top-level and publicly readable.
 *
 * Key Security Decisions:
 * - User profiles can only be created by the user themselves (self-creation).
 * - User profiles can only be read, updated, or deleted by the user themselves (ownership).
 * - User achievements are private to the user and stored in a subcollection under the user's profile.
 * - Listing of user achievements is allowed only for the owning user.
 * - All other collections are publicly readable but only writable by authenticated users.
 *
 * Denormalization for Authorization:
 * - The `userId` is duplicated in both the document ID and the `userId` field within the `/users/{userId}` document. This allows for efficient ownership checks without additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (create) User with matching UID can create their profile.
     * @allow (get, update, delete) User with matching UID can read, update, or delete their profile.
     * @deny (create) User cannot create a profile with a mismatched UID.
     */
    match /users/{userId} {
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow get, update, delete: if isExistingOwner(userId);
      allow list: if false;
    }

    /**
     * @description Controls access to course documents.
     * @path /courses/{courseId}
     * @allow (get, list) Any user can read course information.
     * @deny (create, update, delete) Only authenticated users can manage course information.
     */
    match /courses/{courseId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to lesson documents.
     * @path /lessons/{lessonId}
     * @allow (get, list) Any user can read lesson information.
     * @deny (create, update, delete) Only authenticated users can manage lesson information.
     */
    match /lessons/{lessonId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to question documents.
     * @path /questions/{questionId}
     * @allow (get, list) Any user can read question information.
     * @deny (create, update, delete) Only authenticated users can manage question information.
     */
    match /questions/{questionId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to exam documents.
     * @path /exams/{examId}
     * @allow (get, list) Any user can read exam information.
     * @deny (create, update, delete) Only authenticated users can manage exam information.
     */
    match /exams/{examId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to attempt documents.
     * @path /attempts/{attemptId}
     * @allow (get, list) Any user can read attempt information.
     * @deny (create, update, delete) Only authenticated users can manage attempt information.
     */
    match /attempts/{attemptId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to daily metrics documents.
     * @path /metrics/daily/{date}
     * @allow (get, list) Any user can read daily metrics.
     * @deny (create, update, delete) Only authenticated users can manage daily metrics.
     */
    match /metrics/daily/{date} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to course competency documents.
     * @path /courseCompetencies/{courseCompetencyId}
     * @allow (get, list) Any user can read course competency information.
     * @deny (create, update, delete) Only authenticated users can manage course competency information.
     */
    match /courseCompetencies/{courseCompetencyId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to user achievement documents.
     * @path /users/{userId}/achievements/{userAchievementId}
     * @allow (create, get, update, delete, list) Only the owner user can manage their achievements.
     * @deny (create) User cannot create a achievement with a mismatched UID.
     */
    match /users/{userId}/achievements/{userAchievementId} {
      allow create: if isOwner(userId);
      allow get, update, delete, list: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to master course documents.
     * @path /masterCourses/{masterCourseId}
     * @allow (get, list) Any user can read master course information.
     * @deny (create, update, delete) Only authenticated users can manage master course information.
     */
    match /masterCourses/{masterCourseId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to master certificate documents.
     * @path /masterCertificates/{masterCertificateId}
     * @allow (get, list) Any user can read master certificate information.
     * @deny (create, update, delete) Only authenticated users can manage master certificate information.
     */
    match /masterCertificates/{masterCertificateId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to roadmap documents.
     * @path /roadmaps/{roadmapId}
     * @allow (get, list) Any user can read roadmap information.
     * @deny (create, update, delete) Only authenticated users can manage roadmap information.
     */
    match /roadmaps/{roadmapId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Controls access to schedule documents.
     * @path /schedules/{scheduleId}
     * @allow (get, list) Any user can read schedule information.
     * @deny (create, update, delete) Only authenticated users can manage schedule information.
     */
    match /schedules/{scheduleId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

     /**
      * @description Controls access to quiz documents.
      * @path /quizzes/{quizId}
      * @allow (get, list) Any user can read quiz information.
      * @deny (create, update, delete) Only authenticated users can manage quiz information.
      */
    match /quizzes/{quizId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }
  }
}