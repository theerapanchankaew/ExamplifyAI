/**
 * @fileoverview Firestore Security Rules for ExamplifyAI.
 *
 * Core Philosophy:
 * This ruleset prioritizes secure access control based on user roles and
 * ownership.  It aims for strong authorization while remaining flexible on
 * data shapes during the prototyping phase.
 *
 * Data Structure:
 * The Firestore database is structured with top-level collections for entities
 * like courses, lessons, modules, questions, exams, and attempts. User-specific
 * data is nested under `/users/{userId}`.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - Read-only collections are explicitly marked.
 * - The default security posture for ambiguous relationships is strict
 *   owner-only access.
 * - Authorization is performed using helper functions that encapsulate common checks.
 *
 * Denormalization for Authorization:
 * To avoid `get()` calls in rules, authorization-related data (e.g., user roles,
 * ownership) should be denormalized directly onto the documents being secured.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the document.
     * @param {string} userId The user ID to compare against.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is the existing owner of the document.
     *  This function requires that the document exists.
     * @param {string} userId The user ID to compare against.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Enforces document ownership for user profiles.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their profile.
     *   - auth.uid: 'user123'
     *   - request.resource.data.userId: 'user123'
     * @allow (get, update, delete) User with ID 'user123' can read/update/delete their profile.
     *   - auth.uid: 'user123'
     * @deny (create) User with ID 'user123' cannot create a profile with userId 'user456'.
     *   - auth.uid: 'user123'
     *   - request.resource.data.userId: 'user456'
     * @deny (update, delete) User with ID 'user123' cannot update/delete a profile with userId 'user456'.
     *   - auth.uid: 'user123'
     *   - resource.data.userId: 'user456'
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to courses, restricts writes.
     * @path /courses/{courseId}
     * @allow (get, list) Any user can read course information.
     * @deny (create, update, delete) No user can create, update, or delete courses without explicit authorization logic. // TODO
     * @principle Public read access with restricted writes.
     */
    match /courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
    }

