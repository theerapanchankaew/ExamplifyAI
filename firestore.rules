/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for user profiles and their associated data.
 *  All other data is publicly readable, but write access is restricted.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information; access is restricted to the owning user.
 * - /users/{userId}/achievements/{userAchievementId}: Stores user-specific achievements; accessible only by the owning user.
 * - /courses/{courseId}: Stores course information; publicly readable, write access restricted.
 * - /lessons/{lessonId}: Stores lesson information; publicly readable, write access restricted.
 * - /questions/{questionId}: Stores question data; publicly readable, write access restricted.
 * - /exams/{examId}: Stores exam definitions; publicly readable, write access restricted.
 * - /attempts/{attemptId}: Stores user attempts; publicly readable, write access restricted.
 * - /metrics/daily/{date}: Stores daily metrics; publicly readable, write access restricted.
 * - /courseCompetencies/{courseCompetencyId}: Stores course competencies; publicly readable, write access restricted.
 * - /masterCourses/{masterCourseId}: Stores master courses; publicly readable, write access restricted.
 * - /masterCertificates/{masterCertificateId}: Stores master certificates; publicly readable, write access restricted.
 * - /roadmaps/{roadmapId}: Stores roadmaps; publicly readable, write access restricted.
 * - /schedules/{scheduleId}: Stores schedules; publicly readable, write access restricted.
 * - /quizzes/{quizId}: Stores quizzes; publicly readable, write access restricted.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - All top-level collections (courses, lessons, questions, etc.) are publicly readable to allow open access to content.
 * - Write access to these collections is denied to all users in this prototype. In a production environment, this would be restricted to administrative users.
 *
 * Access Control Patterns:
 * - /users/{userId}: Ownership (isOwner(userId))
 * - /users/{userId}/achievements/{userAchievementId}: Ownership (isOwner(userId))
 * - All other collections: Public Read with Owner-Only Writes (enforced through `allow write: if false;`)
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     * @return {bool} True if the request is authenticated, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     * @param {string} userId The user ID to compare against the authenticated user ID.
     * @return {bool} True if the user IDs match, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner and the resource exists.
     * @param {string} userId The user ID to compare against the authenticated user ID.
     * @return {bool} True if the user IDs match and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
    
    /**
     * @description Defines access rules for user profiles.
     * @path /users/{userId}
     * @allow (create) If the user is creating their own profile (userId matches auth.uid).
     * @allow (get, update, delete) If the user is the owner of the profile.
     * @deny (list) Listing users is not allowed.
     * @deny (create) If the userId does not match auth.uid.
     * @deny (update, delete) If the resource does not exist.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Defines access rules for user achievements.
     * @path /users/{userId}/achievements/{userAchievementId}
     * @allow (create) If the user is creating an achievement under their own profile.
     * @allow (get, update, delete) If the user is the owner of the parent user profile.
     * @deny (list) Listing user achievements is not allowed.
     * @deny (create) If the user ID in the path doesn't match the authenticated user ID.
     * @principle Enforces document ownership for user achievements.
     */
    match /users/{userId}/achievements/{userAchievementId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Defines access rules for courses.
     * @path /courses/{courseId}
     * @allow (get, list) Public read access is allowed for courses.
     * @deny (create, update, delete) Write access is not allowed in this prototype.
     */
    match /courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Defines access rules for lessons.
     * @path /lessons/{lessonId}
     * @allow (get, list) Public read access is allowed for lessons.
     * @deny (create, update, delete) Write access is not allowed in this prototype.
     */
    match /lessons/{lessonId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Defines access rules for questions.
     * @path /questions/{questionId}
     * @allow (get, list) Public read access is allowed for questions.
     * @deny (create, update, delete) Write access is not allowed in this prototype.
     */
