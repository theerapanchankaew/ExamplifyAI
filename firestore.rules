    }

    /**
     * @description Rules for roadmaps.
     * @path /roadmaps/{roadmapId}
     * @allow (get, list) Any user can read roadmap definitions.
     * @deny (create, update, delete) No one can create, update, or delete roadmap definitions in this prototype.
     * @principle Public read access, owner-only writes (not yet implemented).
     */
    match /roadmaps/{roadmapId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin role check
    }

   /**
    * @description Rules for schedules.
    * @path /schedules/{scheduleId}
    * @allow (get, list) Any user can read schedule definitions.
