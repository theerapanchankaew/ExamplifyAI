/**
 * @file Firestore Security Rules for ExamplifyAI
 *
 * @core_philosophy This ruleset enforces a strict user-ownership model for user profiles and achievements,
 *                  while allowing public read access to course content. Administrative access is not explicitly
 *                  defined but can be added by introducing a role-based access control mechanism.
 *
 * @data_structure
 * - /users/{userId}: Stores individual user profiles. Only the authenticated user can access their own profile.
 * - /users/{userId}/achievements/{achievementId}: Stores user-specific achievements. Only the authenticated user can access their own achievements.
 * - /courses/{courseId}: Stores course information. Publicly readable.
 * - /lessons/{lessonId}: Stores lesson information. Publicly readable.
 * - /modules/{moduleId}: Stores module information. Publicly readable.
 * - /chapters/{chapterId}: Stores chapter information. Publicly readable.
 * - /questions/{questionId}: Stores question bank. Publicly readable.
 * - /exams/{examId}: Stores exam definitions. Publicly readable.
 * - /attempts/{attemptId}: Stores user exam attempts.  Only the user can create attempts for themselves; other users should not be able to create attempts on behalf of other users.
 * - /metrics/daily/{date}: Stores daily metrics. No specific write access is defined.
 * - /courseCompetencies/{courseCompetencyId}: Stores course competencies. Publicly readable.
 * - /masterCourses/{masterCourseId}: Stores master course definitions. Publicly readable.
 * - /masterCertificates/{masterCertificateId}: Stores issued master certificates. No write permissions are defined.
 * - /roadmaps/{roadmapId}: Stores roadmap definitions. Publicly readable.
 * - /schedules/{scheduleId}: Stores schedule events. No specific write access is defined.
 * - /quizzes/{quizId}: Stores quiz information. Publicly readable.
 *
 * @key_security_decisions
 * - Users cannot list all user profiles (to protect privacy).
 * - Course content (courses, lessons, modules, chapters, questions, exams, courseCompetencies, roadmaps, quizzes) is publicly readable.
 * - The default security posture for collections without explicit rules is restrictive (no access).
 * - Authorization decisions are made based on the authenticated user's UID (`request.auth.uid`).
 *
 * @denormalization_for_authorization N/A - Denormalization is not used in this ruleset.
 * @structural_segregation N/A - Structural segregation is not used in this ruleset.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user profiles.  Only the authenticated user can access their own profile.
     * @path /users/{userId}
     * @allow (create) User with UID 'user123' creates their profile.
     * @allow (get) User with UID 'user123' reads their own profile.
     * @allow (update) User with UID 'user123' updates their own profile.
     * @allow (delete) User with UID 'user123' deletes their own profile.
     * @deny (create) User with UID 'user456' attempts to create a profile for 'user123'.
     * @deny (get) User with UID 'user456' attempts to read the profile of 'user123'.
     * @deny (update) User with UID 'user456' attempts to update the profile of 'user123'.
     * @deny (delete) User with UID 'user456' attempts to delete the profile of 'user123'.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      // Verified user identity.
      allow get: if isSignedIn() && isOwner(userId);
      // Listing users is not allowed.
      allow list: if false;
      // Allow the user to create their own profile.
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      // The profile data must match the userId, which must also be immutable
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      // Only the user can delete their profile.
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Manages user achievements. Only the authenticated user can access their own achievements.
     * @path /users/{userId}/achievements/{userAchievementId}
     * @allow (create) User with UID 'user123' creates an achievement.
     * @allow (get) User with UID 'user123' reads their own achievement.
     * @allow (update) User with UID 'user123' updates their own achievement.
     * @allow (delete) User with UID 'user123' deletes their own achievement.
     * @deny (create) User with UID 'user456' attempts to create an achievement for 'user123'.
     * @deny (get) User with UID 'user456' attempts to read an achievement of 'user123'.
     * @deny (update) User with UID 'user456' attempts to update an achievement of 'user123'.
     * @deny (delete) User with UID 'user456' attempts to delete an achievement of 'user123'.
     * @principle Enforces document ownership for user achievements.
     */
    match /users/{userId}/achievements/{userAchievementId} {
      // Only the owner can read
      allow get: if isSignedIn() && isOwner(userId);
      // Only the owner can list
      allow list: if isSignedIn() && isOwner(userId);
      // Allow the user to create their own achievements.
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      // Only the owner can delete their own achievements.
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to courses.
     * @path /courses/{courseId}
     * @allow (get) Any user can read course data.
     * @allow (list) Any user can list courses.
     * @deny (create) No one can create courses without specific authorization.
     * @deny (update) No one can update courses without specific authorization.
     * @deny (delete) No one can delete courses without specific authorization.
     */
    match /courses/{courseId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
    }

    /**
