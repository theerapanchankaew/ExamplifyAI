      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Defines access rules for exams.
     * @path /exams/{examId}
     * @allow (get, list) Public read access is allowed for exams.
     * @deny (create, update, delete) Write access is not allowed in this prototype.
     */
    match /exams/{examId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Defines access rules for attempts.
     * @path /attempts/{attemptId}
     * @allow (get, list) Public read access is allowed for attempts.
     * @deny (create, update, delete) Write access is not allowed in this prototype.
     */
    match /attempts/{attemptId} {
