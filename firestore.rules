    /**
     * @description Enforces document ownership for user achievements.
     * @path /users/{userId}/achievements/{userAchievementId}
     * @allow (get) User with ID 'user123' can read their achievement 'achievement456'.
     *   - auth.uid: 'user123'
     *   - resource.data.userId: 'user123'
     * @allow (list) User with ID 'user123' can list their achievements.
     *   - auth.uid: 'user123'
     * @allow (create) User with ID 'user123' can create their achievement 'achievement456'.
     *   - auth.uid: 'user123'
     *   - request.resource.data.userId: 'user123'
     * @allow (update, delete) User with ID 'user123' can update/delete their achievement 'achievement456'.
     *   - auth.uid: 'user123'
     *   - resource.data.userId: 'user123'
     * @deny (create) User with ID 'user123' cannot create achievement 'achievement456' with userId 'user456'.
     *   - auth.uid: 'user123'
     *   - request.resource.data.userId: 'user456'
     * @deny (update, delete) User with ID 'user123' cannot update/delete achievement 'achievement456' with userId 'user456'.
     *   - auth.uid: 'user123'
     *   - resource.data.userId: 'user456'
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/achievements/{userAchievementId} {
      allow get: if isOwner(userId) && isOwner(resource.data.userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && isOwner(resource.data.userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId) && isOwner(resource.data.userId);
    }

    /**
