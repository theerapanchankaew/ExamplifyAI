    /**
     * @description Rules for the /users/{userId}/achievements/{userAchievementId} collection.
     * @path /users/{userId}/achievements/{userAchievementId}
     * @allow (create) User with ID 'user123' can create their own achievement.
     *   auth: { uid: 'user123' }
     * @deny (create) User with ID 'user123' cannot create an achievement for 'user456'.
     *   auth: { uid: 'user123' }
     * @principle Enforces user-ownership for achievement data.
     */
    match /users/{userId}/achievements/{userAchievementId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

