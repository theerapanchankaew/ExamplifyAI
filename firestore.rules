/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a role-based access control model with ownership constraints.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles; `userId` must match `request.auth.uid`.
 * - /courses/{courseId}: Stores course information.
 * - /lessons/{lessonId}: Stores lesson information, related to a course by `courseId`.
 * - /questions/{questionId}: Stores questions for exams and quizzes.
 * - /exams/{examId}: Stores exam definitions, related to a course by `courseId`.
 * - /attempts/{attemptId}: Stores user exam attempts, linked to a user by `userId` and an exam by `examId`.
 * - /metrics/daily/{date}: Stores daily metrics for the system. Document ID is the date in YYYYMMDD format.
 * - /courseCompetencies/{courseCompetencyId}: Stores the mapping between courses and competencies.
 * - /users/{userId}/achievements/{userAchievementId}: Stores user achievements. Accessible only by the user.
 * - /masterCourses/{masterCourseId}: Stores master course definitions.
 * - /masterCertificates/{masterCertificateId}: Stores issued master certificates, linked to a user by `userId` and a master course by `masterCourseId`.
 * - /roadmaps/{roadmapId}: Stores roadmap definitions.
 * - /schedules/{scheduleId}: Stores schedule events.
 * - /quizzes/{quizId}: Stores quiz information.
 *
 * Key Security Decisions:
 * - Users can only read and write their own user profiles.
 * - The 'Admin' role has elevated privileges on other collections.
 * - Ownership is strictly enforced for updates and deletes.
 *
 * Denormalization for Authorization:
 * - The `User` document includes a `role` field (e.g., "Admin", "Instructor", "Student") which is used by the `isAdmin()` helper function.
 *
 * Structural Segregation:
 * - User-specific achievements are stored in a subcollection `/users/{userId}/achievements/{userAchievementId}` to keep them private to the user.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ==================== Helper Functions ====================

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the document.
     * @param {string} userId The user ID to check against.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user exists and is the owner of the document.  Helpful for update/delete.
     * @param {string} userId The user ID to check against.
     * @return {boolean} True if the user is the owner and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the user has the 'Admin' or 'Super-Admin' role.
     * @return {boolean} True if the user has the 'Admin' or 'Super-Admin' role, false otherwise.
     */
    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Admin', 'Super-Admin'];
    }

    // ==================== Users Collection ====================

    /**
     * @description Manages access to user profiles.
     * @path /users/{userId}
     * @allow (create) If the user is signed in and the `userId` matches `request.auth.uid`.
     * @allow (get) If the user is signed in.
     * @allow (update) If the user is the owner of the profile or an admin.
     * @allow (delete) If the user is the owner of the profile.
     * @deny (create) If the `userId` does not match `request.auth.uid`.
     * @deny (update) If the user is not the owner or an admin.
     * @deny (delete) If the user is not the owner.
     * @principle Enforces document ownership and role-based access control.
     */
    match /users/{userId} {
      // Read Permissions
      allow get: if isSignedIn();
      allow list: if isAdmin(); // Only admins can list all users

      // Write Permissions
      allow create: if isOwner(userId) && request.resource.data.userId == request.auth.uid; // Self-creation with ID validation
      allow update: if isExistingOwner(userId) || isAdmin(); // Owner or Admin can update
      allow delete: if isExistingOwner(userId); // Only the owner can delete

    }

    // ==================== Courses Collection ====================

    /**
     * @description Manages access to course information.
     * @path /courses/{courseId}
     * @allow (get, list) If the user is signed in.
     * @allow (create, update, delete) If the user is an admin.
     * @deny (create, update, delete) If the user is not an admin.
     * @principle Restricts write access to admins.
     */
    match /courses/{courseId} {
      // Read Permissions
      allow get, list: if isSignedIn();

      // Write Permissions
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    // ==================== Lessons Collection ====================

    /**
     * @description Manages access to lesson information.
     * @path /lessons/{lessonId}
     * @allow (get, list) If the user is signed in.
     * @allow (create, update, delete) If the user is an admin.
     * @deny (create, update, delete) If the user is not an admin.
     * @principle Restricts write access to admins.
     */
    match /lessons/{lessonId} {
      // Read Permissions
      allow get, list: if isSignedIn();

      // Write Permissions
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    // ==================== Questions Collection ====================

    /**
     * @description Manages access to questions.
     * @path /questions/{questionId}
     * @allow (get, list) If the user is signed in.
     * @allow (create, update, delete) If the user is an admin.
     * @deny (create, update, delete) If the user is not an admin.
     * @principle Restricts write access to admins.
     */
    match /questions/{questionId} {
      // Read Permissions
      allow get, list: if isSignedIn();

      // Write Permissions
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    // ==================== Exams Collection ====================

    /**
     * @description Manages access to exams.
     * @path /exams/{examId}
     * @allow (get, list) If the user is signed in.
     * @allow (create, update, delete) If the user is an admin.
     * @deny (create, update, delete) If the user is not an admin.
     * @principle Restricts write access to admins.
     */
    match /exams/{examId} {
      // Read Permissions
      allow get, list: if isSignedIn();

      // Write Permissions
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    // ==================== Attempts Collection ====================

    /**
     * @description Manages access to exam attempts.
     * @path /attempts/{attemptId}
     * @allow (get) If the user is signed in.
     * @allow (list) If the user is an admin or the owner.
     * @allow (create) If the user is signed in.
     * @allow (update, delete) If the user is an admin.
     * @deny (update, delete) If the user is not an admin.
     * @principle Restricts write access to admins, allows user-level read access.
     */
    match /attempts/{attemptId} {
      // Read Permissions
      allow get: if isSignedIn();
      allow list: if isAdmin();

      // Write Permissions
      allow create: if isSignedIn();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    // ==================== Metrics Collection ====================

    /**
     * @description Manages access to system metrics.
     * @path /metrics/daily/{date}
     * @allow (get, list) If the user is an admin.
     * @allow (create, update, delete) If the user is an admin.
     * @deny (get, list, create, update, delete) If the user is not an admin.
     * @principle Restricts access to admins.
     */
    match /metrics/daily/{date} {
      // Read Permissions
      allow get, list: if isAdmin();

      // Write Permissions
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    // ==================== CourseCompetencies Collection ====================

    /**
     * @description Manages access to course competencies.
     * @path /courseCompetencies/{courseCompetencyId}
     * @allow (get, list) If the user is signed in.
     * @allow (create, update, delete) If the user is an admin.
     * @deny (create, update, delete) If the user is not an admin.
     * @principle Restricts write access to admins.
     */
    match /courseCompetencies/{courseCompetencyId} {
      // Read Permissions
      allow get, list: if isSignedIn();

      // Write Permissions
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    // ==================== UserAchievements Collection ====================

    /**
     * @description Manages access to user achievements.
     * @path /users/{userId}/achievements/{userAchievementId}
     * @allow (get, list) If the user is the owner.
     * @allow (create, update, delete) If the user is the owner.
     * @deny (get, list, create, update, delete) If the user is not the owner.
     * @principle Enforces document ownership.
     */
    match /users/{userId}/achievements/{userAchievementId} {
      // Read Permissions
      allow get, list: if isOwner(userId);

      // Write Permissions
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    // ==================== MasterCourses Collection ====================

    /**
     * @description Manages access to master courses.
     * @path /masterCourses/{masterCourseId}
     * @allow (get, list) If the user is signed in.
     * @allow (create, update, delete) If the user is an admin.
     * @deny (create, update, delete) If the user is not an admin.
     * @principle Restricts write access to admins.
     */
    match /masterCourses/{masterCourseId} {
      // Read Permissions
      allow get, list: if isSignedIn();

      // Write Permissions
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    // ==================== MasterCertificates Collection ====================

    /**
     * @description Manages access to master certificates.
     * @path /masterCertificates/{masterCertificateId}
     * @allow (get, list) If the user is signed in.
     * @allow (create, update, delete) If the user is an admin.
     * @deny (create, update, delete) If the user is not an admin.
     * @principle Restricts write access to admins.
     */
    match /masterCertificates/{masterCertificateId} {
      // Read Permissions
      allow get, list: if isSignedIn();

      // Write Permissions
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    // ==================== Roadmaps Collection ====================

    /**
     * @description Manages access to roadmaps.
     * @path /roadmaps/{roadmapId}
     * @allow (get, list) If the user is signed in.
     * @allow (create, update, delete) If the user is an admin.
     * @deny (create, update, delete) If the user is not an admin.
     * @principle Restricts write access to admins.
     */
    match /roadmaps/{roadmapId} {
      // Read Permissions
      allow get, list: if isSignedIn();

      // Write Permissions
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    // ==================== Schedules Collection ====================

    /**
     * @description Manages access to schedules.
     * @path /schedules/{scheduleId}
     * @allow (get, list) If the user is signed in.
     * @allow (create, update, delete) If the user is an admin.
     * @deny (create, update, delete) If the user is not an admin.
     * @principle Restricts write access to admins.
     */
    match /schedules/{scheduleId} {
      // Read Permissions
      allow get, list: if isSignedIn();

      // Write Permissions
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }

    // ==================== Quizzes Collection ====================

    /**
     * @description Manages access to quizzes.
     * @path /quizzes/{quizId}
     * @allow (get, list) If the user is signed in.
     * @allow (create, update, delete) If the user is an admin.
     * @deny (create, update, delete) If the user is not an admin.
     * @principle Restricts write access to admins.
     */
    match /quizzes/{quizId} {
      // Read Permissions
      allow get, list: if isSignedIn();

      // Write Permissions
      allow create: if isAdmin();
      allow update: if isAdmin() && resource != null;
      allow delete: if isAdmin() && resource != null;
    }
  }
}