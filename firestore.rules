    /**
     * @description Allows public read access to questions.
     * @path /questions/{questionId}
     * @allow (get) Any user can read question data.
     * @allow (list) Any user can list questions.
     * @deny (create) No one can create questions without specific authorization.
     * @deny (update) No one can update questions without specific authorization.
     * @deny (delete) No one can delete questions without specific authorization.
     */
    match /questions/{questionId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
    }

    /**
     * @description Allows public read access to exams.
     * @path /exams/{examId}
     * @allow (get) Any user can read exam data.
     * @allow (list) Any user can list exams.
     * @deny (create) No one can create exams without specific authorization.
     * @deny (update) No one can update exams without specific authorization.
     * @deny (delete) No one can delete exams without specific authorization.
     */
    match /exams/{examId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
    }

    /**
     * @description Manages user attempts.  Requires the user to be signed in, the attempt must be for the signed in user.
     * @path /attempts/{attemptId}
     * @allow (create) User with UID 'user123' creates an attempt.
     * @allow (get) User with UID 'user123' gets attempt.
     * @allow (update) User with UID 'user123' updates their attempt.
     * @allow (delete) User with UID 'user123' deletes attempt.
     * @deny (create) User with UID 'user456' attempts to create an attempt for 'user123'.
     * @deny (get) User with UID 'user456' attempts to get the attempt for 'user123'.
     * @deny (update) User with UID 'user456' attempts to update the attempt for 'user123'.
     * @deny (delete) User with UID 'user456' attempts to delete attempt for 'user123'.
     */
    match /attempts/{attemptId} {
      // Verified user identity.
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Listing is not allowed
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && resource != null && resource.data.userId == request.auth.uid && request.resource.data.userId == resource.data.userId;
      allow delete: if isSignedIn() && resource != null && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Stores daily metrics for the system. No specific write access is defined.
     * @path /metrics/daily/{date}
     * @allow (get) Any user can read metrics.
     * @allow (list) Any user can list metrics.
     * @deny (create) No one can create metrics without specific authorization.
     * @deny (update) No one can update metrics without specific authorization.
     * @deny (delete) No one can delete metrics without specific authorization.
     */
    match /metrics/daily/{date} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
    }

    /**
