      allow create, update, delete: if false;
    }

    /**
     * @description Defines access rules for daily metrics.
     * @path /metrics/daily/{date}
     * @allow (get, list) Public read access is allowed for daily metrics.
     * @deny (create, update, delete) Write access is not allowed in this prototype.
     */
    match /metrics/daily/{date} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Defines access rules for course competencies.
     * @path /courseCompetencies/{courseCompetencyId}
     * @allow (get, list) Public read access is allowed for course competencies.
     * @deny (create, update, delete) Write access is not allowed in this prototype.
     */
    match /courseCompetencies/{courseCompetencyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

   /**
     * @description Defines access rules for master courses.
     * @path /masterCourses/{masterCourseId}
     * @allow (get, list) Public read access is allowed for master courses.
     * @deny (create, update, delete) Write access is not allowed in this prototype.
