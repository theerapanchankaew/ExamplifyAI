/**
 * @file Firestore Security Rules for ExamplifyAI
 * @description This ruleset enforces a user-ownership model for user profiles and achievements, and provides public read access to course-related data.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles.  `userId` matches `request.auth.uid`.
 * - /courses/{courseId}: Stores course information.
 * - /lessons/{lessonId}: Stores lesson information, related to a course by `courseId`.
 * - /questions/{questionId}: Stores questions for exams and quizzes.
 * - /exams/{examId}: Stores exam definitions, related to a course by `courseId`.
 * - /attempts/{attemptId}: Stores user exam attempts, linked to a user by `userId` and an exam by `examId`.
 * - /metrics/daily/{date}: Stores daily metrics for the system. Document ID is the date in YYYYMMDD format.
 * - /courseCompetencies/{courseCompetencyId}: Stores the mapping between courses and competencies.
 * - /users/{userId}/achievements/{userAchievementId}: Stores user achievements. Accessible only by the user.
 * - /masterCourses/{masterCourseId}: Stores master course definitions.
 * - /masterCertificates/{masterCertificateId}: Stores issued master certificates, linked to a user by `userId` and a master course by `masterCourseId`.
 * - /roadmaps/{roadmapId}: Stores roadmap definitions.
 * - /schedules/{scheduleId}: Stores schedule events.
 * - /quizzes/{quizId}: Stores quiz information.
 *
 * Key Security Decisions:
 * - User profiles (/users/{userId}) are strictly controlled: only the authenticated user can read/write their own profile.
 * - User achievements (/users/{userId}/achievements/{userAchievementId}) are also strictly controlled by the owning user.
 * - Other top-level collections (courses, lessons, questions, exams, attempts, etc.) are publicly readable but writes are generally disallowed in this prototype.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows users to read and write their own profile data.
     * @path /users/{userId}
     * @allow (create) User with matching `userId` creates their profile.
     * @allow (get, update, delete) User with matching `userId` reads/updates/deletes their profile.
     * @deny User attempts to create a profile with a mismatched `userId`.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to course information.
     * @path /courses/{courseId}
     * @allow (get, list) Any user can read course information.
     * @deny (create, update, delete) No user can create, update, or delete courses in this prototype.
     * @principle Provides public read access while restricting writes.
     */
    match /courses/{courseId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to lesson information.
     * @path /lessons/{lessonId}
     * @allow (get, list) Any user can read lesson information.
     * @deny (create, update, delete) No user can create, update, or delete lessons in this prototype.
     * @principle Provides public read access while restricting writes.
     */
    match /lessons/{lessonId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to question information.
     * @path /questions/{questionId}
     * @allow (get, list) Any user can read question information.
     * @deny (create, update, delete) No user can create, update, or delete questions in this prototype.
     * @principle Provides public read access while restricting writes.
     */
    match /questions/{questionId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to exam information.
     * @path /exams/{examId}
     * @allow (get, list) Any user can read exam information.
     * @deny (create, update, delete) No user can create, update, or delete exams in this prototype.
     * @principle Provides public read access while restricting writes.
     */
    match /exams/{examId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to attempt information.
     * @path /attempts/{attemptId}
     * @allow (get, list) Any user can read attempt information.
     * @deny (create, update, delete) No user can create, update, or delete attempts in this prototype.
     * @principle Provides public read access while restricting writes.
     */
    match /attempts/{attemptId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to daily metrics.
     * @path /metrics/daily/{date}
     * @allow (get, list) Any user can read daily metrics.
     * @deny (create, update, delete) No user can create, update, or delete metrics in this prototype.
     * @principle Provides public read access while restricting writes.
     */
    match /metrics/daily/{date} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to course competency information.
     * @path /courseCompetencies/{courseCompetencyId}
     * @allow (get, list) Any user can read course competency information.
     * @deny (create, update, delete) No user can create, update, or delete course competencies in this prototype.
     * @principle Provides public read access while restricting writes.
     */
    match /courseCompetencies/{courseCompetencyId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows users to read and write their own achievements.
     * @path /users/{userId}/achievements/{userAchievementId}
     * @allow (create) User with matching `userId` creates an achievement.
     * @allow (get, update, delete) User with matching `userId` reads/updates/deletes their own achievement.
     * @deny User attempts to create an achievement with a mismatched `userId`.
     * @principle Enforces document ownership for user achievements.
     */
    match /users/{userId}/achievements/{userAchievementId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to master course information.
     * @path /masterCourses/{masterCourseId}
     * @allow (get, list) Any user can read master course information.
     * @deny (create, update, delete) No user can create, update, or delete master courses in this prototype.
     * @principle Provides public read access while restricting writes.
     */
    match /masterCourses/{masterCourseId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to master certificate information.
     * @path /masterCertificates/{masterCertificateId}
     * @allow (get, list) Any user can read master certificate information.
     * @deny (create, update, delete) No user can create, update, or delete master certificates in this prototype.
     * @principle Provides public read access while restricting writes.
     */
    match /masterCertificates/{masterCertificateId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to roadmap information.
     * @path /roadmaps/{roadmapId}
     * @allow (get, list) Any user can read roadmap information.
     * @deny (create, update, delete) No user can create, update, or delete roadmaps in this prototype.
     * @principle Provides public read access while restricting writes.
     */
    match /roadmaps/{roadmapId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to schedule information.
     * @path /schedules/{scheduleId}
     * @allow (get, list) Any user can read schedule information.
     * @deny (create, update, delete) No user can create, update, or delete schedules in this prototype.
     * @principle Provides public read access while restricting writes.
     */
    match /schedules/{scheduleId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to quiz information.
     * @path /quizzes/{quizId}
     * @allow (get, list) Any user can read quiz information.
     * @deny (create, update, delete) No user can create, update, or delete quizzes in this prototype.
     * @principle Provides public read access while restricting writes.
     */
    match /quizzes/{quizId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}