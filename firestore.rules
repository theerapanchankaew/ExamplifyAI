      allow create, update, delete: if false;
    }

    /**
     * @description Defines access rules for schedules.
     * @path /schedules/{scheduleId}
     * @allow (get, list) Public read access is allowed for schedules.
     * @deny (create, update, delete) Write access is not allowed in this prototype.
     */
    match /schedules/{scheduleId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Defines access rules for quizzes.
     * @path /quizzes/{quizId}
     * @allow (get, list) Public read access is allowed for quizzes.
     * @deny (create, update, delete) Write access is not allowed in this prototype.
     */
    match /quizzes/{quizId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}